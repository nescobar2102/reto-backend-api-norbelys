{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // Cambia esto a "ESNext" si deseas usar ES6
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}